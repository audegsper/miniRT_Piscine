//** Makefile 컴파일 명령어에 -g 옵션 있는지 확인!! **//
{
    // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
    // 기존 특성에 대한 설명을 보려면 가리킵니다.
    // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc - 활성 파일 빌드 및 디버그",
            "type": "cppdbg",
            "request": "launch",
            // ** program에 실행파일명으로 수정할 것!!**//
            "program": "${workspaceFolder}/miniRT",
            // ** 실행파일을 열 때 필요한 인자가 있으면 args에 넣기!!**//
            "args": ["rt/example2.rt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            //"preLaunchTask": "C/C++: gcc 활성 파일 빌드"
        }
    ]
}
